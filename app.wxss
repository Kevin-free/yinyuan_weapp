}
.btn-share{
  background-color: rgba(255, 255, 255, 0.2);
  margin-top: 20rpx;
  border-radius: 50rpx;
  width: 100%;
  height: 100%;
  color: #2BA9E9;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
